<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6cf04"
    tools:context="com.example.user.enviro.desc1">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#d6cf04"
        android:layout_marginBottom="240dp"
        app:srcCompat="@drawable/h3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="113dp"
        android:drawableStart="@drawable/ic_check_circle_black_24dp"
        android:text="We want to help our customers to achieve zero wastage."
        android:textColor="#000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:drawableStart="@drawable/ic_check_circle_black_24dp"
        android:text=" Working to minimize waste and maximize value."
        android:textColor="#000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:drawableStart="@drawable/ic_check_circle_black_24dp"
        android:text=" We aim to make our environment eco-friendly."
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_marginTop="55dp"
        android:textStyle="bold" />


</RelativeLayout>
